{
  "name": "fastify-mongo-emqx-template",
  "version": "1.0.0",
  "description": "A simple template to start developing a fastify backend attached to mongo and subscribed to EMQX via WS",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "start": "node main.js",
    "start:dev": "ts-node src/main.ts --inspect=0.0.0.0:9229",
    "start:dev:watch": "nodemon -L src/main.ts --inspect=0.0.0.0:9229 --exec ts-node",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.+(js|jsx|ts|tsx|json)\"",
    "formatTest": "prettier --write \"test/**/*.+(js|jsx|ts|tsx|json)\"",
    "test": "jest --watchAll",
    "test:coverage": "jest --watchAll --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "test-ci": "jest --collect-coverage",
    "publish-code-coverage": "codecov",
    "validate": "npm run lint && npm run test-ci",
    "pretty-quick": "pretty-quick --staged",
    "start:mariadb": "docker run --rm --detach --name tc-mariadb --env MARIADB_USER=tcuser --env MARIADB_PASSWORD=tcpasswd --env MARIADB_DATABASE=teamcamp --env MARIADB_ROOT_PASSWORD=my-secret-pw  -p 3306:3306 mariadb:latest",
    "start:mongodb": "docker run --rm --detach --name tc-mongodb -p 27017:27017 mongo"
  },
  "author": "eriktvj",
  "license": "MIT",
  "devDependencies": {
    "@types/convict": "^6.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "codecov": "^3.8.2",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "convict": "^6.2.2",
    "fastify": "^3.27.4",
    "make-promises-safe": "^5.1.0",
    "mongodb": "^4.4.1",
    "mqtt": "^4.3.7",
    "pino": "^7.9.2",
    "pino-pretty": "^7.6.0"
  }
}
